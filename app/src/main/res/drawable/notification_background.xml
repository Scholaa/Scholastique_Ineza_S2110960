<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- The color gradient background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#6BA5FB"
                android:endColor="#406295"
                android:angle="45"/>
            <corners android:radius="30dp"/>
        </shape>
    </item>
    <!-- The rounded corners mask -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/>
            <corners android:radius="30dp"/>
        </shape>
    </item>
</layer-list>
